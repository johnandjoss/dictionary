<h1>Add a Definition to: <%= @word.name() %> </h1>

<form action="/definitions" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>

  <label for='def_one'>Definition One:</label>
  <input id='def_one' name='def_one' type='text'>

  <label for='def_two'>Definition Two:</label>
  <input id='def_two' name='def_two' type='text'>

  <button type="submit">Add Definition</button>
</form>
